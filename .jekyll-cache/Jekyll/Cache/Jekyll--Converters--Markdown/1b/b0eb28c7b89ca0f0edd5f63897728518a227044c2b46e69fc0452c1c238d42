	<span class="k">const</span> <span class="kt">int</span> <span class="n">num_studnets</span> <span class="o">=</span> <span class="mi">20</span><span class="p">;</span> 
	
	<span class="kt">int</span> <span class="n">students_scores</span><span class="p">[</span><span class="n">num_studnets</span><span class="p">]</span> <span class="o">=</span> <span class="p">{</span> <span class="mi">1</span><span class="p">,</span> <span class="mi">2</span><span class="p">,</span> <span class="mi">3</span><span class="p">,</span> <span class="mi">4</span><span class="p">,</span> <span class="mi">5</span><span class="p">,</span> <span class="p">};</span>  <span class="c1">// ì‚¬ì´ì¦ˆ 80  </span>

    <span class="n">cout</span> <span class="o">&lt;&lt;</span> <span class="p">(</span><span class="kt">int</span><span class="p">)</span><span class="n">students_scores</span> <span class="o">&lt;&lt;</span> <span class="n">endl</span><span class="p">;</span>  <span class="c1">// â­ ë°°ì—´ ì´ë¦„ìœ¼ë¡œì„œ ë°°ì—´ì˜ ì²«ë²ˆì§¸ ì›ì†Œ ì£¼ì†Œê°’ </span>
    <span class="n">cout</span> <span class="o">&lt;&lt;</span> <span class="p">(</span><span class="kt">int</span><span class="p">)</span><span class="o">&amp;</span><span class="n">students_scores</span> <span class="o">&lt;&lt;</span> <span class="n">endl</span><span class="p">;</span> <span class="c1">// â­ ë°°ì—´ ì´ë¦„ìœ¼ë¡œì„œ ë°°ì—´ì˜ ì²«ë²ˆì§¸ ì›ì†Œ ì£¼ì†Œê°’ </span>
	<span class="n">cout</span> <span class="o">&lt;&lt;</span> <span class="n">students_scores</span><span class="p">[</span><span class="mi">0</span><span class="p">]</span> <span class="o">&lt;&lt;</span> <span class="n">endl</span><span class="p">;</span> 
	<span class="n">cout</span> <span class="o">&lt;&lt;</span> <span class="n">students_scores</span><span class="p">[</span><span class="mi">1</span><span class="p">]</span> <span class="o">&lt;&lt;</span> <span class="n">endl</span><span class="p">;</span>
	<span class="n">cout</span> <span class="o">&lt;&lt;</span> <span class="n">students_scores</span><span class="p">[</span><span class="mi">2</span><span class="p">]</span> <span class="o">&lt;&lt;</span> <span class="n">endl</span><span class="p">;</span>
	
	<span class="n">doSomething</span><span class="p">(</span><span class="n">students_scores</span><span class="p">);</span>

	<span class="k">return</span> <span class="mi">0</span><span class="p">;</span>
<span class="p">}</span>
</code></pre></div></div>

