		<span class="n">RigidCircle</span><span class="p">(</span><span class="n">vec2</span><span class="o">&amp;</span> <span class="n">_pos</span><span class="p">,</span> <span class="n">vec2</span><span class="o">&amp;</span> <span class="n">_vel</span><span class="p">,</span> <span class="n">RGB</span><span class="o">&amp;</span> <span class="n">_color</span><span class="p">,</span> <span class="kt">float</span><span class="o">&amp;</span> <span class="n">_radius</span><span class="p">,</span> <span class="kt">float</span><span class="o">&amp;</span> <span class="n">_mass</span><span class="p">)</span>
		<span class="p">{</span>
			<span class="n">pos</span> <span class="o">=</span> <span class="n">_pos</span><span class="p">;</span>
			<span class="n">vel</span> <span class="o">=</span> <span class="n">_vel</span><span class="p">;</span>
