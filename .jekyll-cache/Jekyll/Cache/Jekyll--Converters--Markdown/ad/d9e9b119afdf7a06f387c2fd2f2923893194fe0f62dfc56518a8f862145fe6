        <span class="k">return</span> <span class="nf">Instantiate</span><span class="p">(</span><span class="n">supply</span><span class="p">,</span> <span class="k">new</span> <span class="nf">Vector3</span><span class="p">(-</span><span class="m">1.0f</span><span class="p">,</span> <span class="m">1.0f</span><span class="p">,</span> <span class="m">0.0f</span><span class="p">),</span> <span class="n">Quaternion</span><span class="p">.</span><span class="n">identity</span><span class="p">);</span>
    <span class="p">}</span>

