<h3 id="factorymethodusecs">ğŸ“œFactoryMethodUse.cs</h3>

<div class="language-c# highlighter-rouge"><div class="highlight"><pre class="highlight"><code><span class="k">using</span> <span class="nn">System.Collections</span><span class="p">;</span>
<span class="k">using</span> <span class="nn">System.Collections.Generic</span><span class="p">;</span>
<span class="k">using</span> <span class="nn">UnityEngine</span><span class="p">;</span>

<span class="k">public</span> <span class="k">class</span> <span class="nc">FactoryMethodUse</span> <span class="p">:</span> <span class="n">MonoBehaviour</span> <span class="p">{</span>

	<span class="k">void</span> <span class="nf">Start</span> <span class="p">()</span> <span class="p">{</span>
<span class="cm">/*  ì˜ˆì œ 2ì˜ ì´ì „ ì½”ë“œ
        RaceFactory factory = null;
        Race type = Race.Terran;

        if (type == Race.Terran)
        {
            factory = new TerranFactory();
        }
        else if (type == Race.Protoss)
        {
            factory = new ProtossFactory();
        }
*/</span>

        <span class="c1">// â­FactoryMethod í´ë˜ìŠ¤ëŠ” ì •ì  í´ë˜ìŠ¤ë¡œ ë§Œë“¤ì–´ ë°”ë¡œ ì‚¬ìš©í•´ë„ ëœë‹¤.</span>
        <span class="n">FactoryMethod</span> <span class="n">factoryMethod</span> <span class="p">=</span> <span class="k">new</span> <span class="nf">FactoryMethod</span><span class="p">();</span>

        <span class="n">RaceFactory</span> <span class="n">factory</span> <span class="p">=</span> <span class="n">factoryMethod</span><span class="p">.</span><span class="nf">getFactory</span><span class="p">();</span>

        <span class="c1">// â­í•˜ë‚˜ì˜ íŒ©í† ë¦¬ ê°ì²´ë¡œ ëª¨ë“  ê±´ë¬¼ì„ ë‹¤ ë§Œë“¤ ìˆ˜ ìˆë‹¤.</span>
        <span class="n">RaceCapacity</span> <span class="n">capacity</span> <span class="p">=</span> <span class="n">factory</span><span class="p">.</span><span class="nf">makeCapacityBuilding</span><span class="p">();</span>
        <span class="n">UnitBuilding</span> <span class="n">building</span> <span class="p">=</span> <span class="n">factory</span><span class="p">.</span><span class="nf">makeUnitBuilding</span><span class="p">();</span>

        <span class="n">capacity</span><span class="p">.</span><span class="nf">expand</span><span class="p">();</span>
        <span class="n">building</span><span class="p">.</span><span class="nf">produce</span><span class="p">();</span>
