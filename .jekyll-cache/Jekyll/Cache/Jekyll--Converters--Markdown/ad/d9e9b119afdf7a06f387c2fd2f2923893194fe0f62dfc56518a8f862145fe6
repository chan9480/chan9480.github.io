<h3 id="factorymethodcs-1">ğŸ“œFactoryMethod.cs</h3>

<div class="language-c# highlighter-rouge"><div class="highlight"><pre class="highlight"><code><span class="k">using</span> <span class="nn">System.Collections</span><span class="p">;</span>
<span class="k">using</span> <span class="nn">System.Collections.Generic</span><span class="p">;</span>
<span class="k">using</span> <span class="nn">UnityEngine</span><span class="p">;</span>

<span class="k">public</span> <span class="k">class</span> <span class="nc">FactoryMethod</span> <span class="p">:</span> <span class="n">MonoBehaviour</span> <span class="p">{</span>

	<span class="k">public</span> <span class="n">Race</span> <span class="n">type</span> <span class="p">=</span> <span class="n">Race</span><span class="p">.</span><span class="n">Terran</span><span class="p">;</span>

	<span class="k">public</span> <span class="n">RaceFactory</span> <span class="nf">getFactory</span><span class="p">()</span>
	<span class="p">{</span>
        <span class="n">RaceFactory</span> <span class="n">factory</span> <span class="p">=</span> <span class="k">null</span><span class="p">;</span>

		<span class="k">switch</span> <span class="p">(</span><span class="n">type</span><span class="p">)</span>
		<span class="p">{</span>
		<span class="k">case</span> <span class="n">Race</span><span class="p">.</span><span class="n">Terran</span><span class="p">:</span>
			<span class="c1">//factory = new TerranFactory ();</span>
			<span class="n">factory</span> <span class="p">=</span> <span class="n">GetComponent</span><span class="p">&lt;</span><span class="n">TerranFactory</span><span class="p">&gt;();</span>
			<span class="k">break</span><span class="p">;</span>
		<span class="k">case</span> <span class="n">Race</span><span class="p">.</span><span class="n">Protoss</span><span class="p">:</span>
			<span class="c1">//factory = new ProtossFactory();</span>
			<span class="n">factory</span> <span class="p">=</span> <span class="n">GetComponent</span><span class="p">&lt;</span><span class="n">ProtossFactory</span><span class="p">&gt;();</span>
			<span class="k">break</span><span class="p">;</span>
		<span class="p">}</span>

		<span class="k">return</span> <span class="n">factory</span><span class="p">;</span>
	<span class="p">}</span>
<span class="p">}</span>
</code></pre></div></div>

<p><br /></p>

<h3 id="factorymethodusecs-1">ğŸ“œFactoryMethodUse.cs</h3>

<div class="language-c# highlighter-rouge"><div class="highlight"><pre class="highlight"><code><span class="k">using</span> <span class="nn">System.Collections</span><span class="p">;</span>
<span class="k">using</span> <span class="nn">System.Collections.Generic</span><span class="p">;</span>
<span class="k">using</span> <span class="nn">UnityEngine</span><span class="p">;</span>

<span class="k">public</span> <span class="k">class</span> <span class="nc">FactoryMethodUse</span> <span class="p">:</span> <span class="n">MonoBehaviour</span> <span class="p">{</span>

    <span class="n">RaceFactory</span> <span class="n">factory</span> <span class="p">=</span> <span class="k">null</span><span class="p">;</span>

	<span class="k">void</span> <span class="nf">Start</span> <span class="p">()</span> <span class="p">{</span>
		<span class="n">factory</span> <span class="p">=</span> <span class="n">GetComponent</span><span class="p">&lt;</span><span class="n">FactoryMethod</span><span class="p">&gt;().</span><span class="nf">getFactory</span><span class="p">();</span>

		<span class="n">GameObject</span> <span class="n">capacity</span> <span class="p">=</span> <span class="n">factory</span><span class="p">.</span><span class="nf">makeCapacityBuilding</span><span class="p">();</span>
		<span class="n">GameObject</span> <span class="n">building</span> <span class="p">=</span> <span class="n">factory</span><span class="p">.</span><span class="nf">makeUnitBuilding</span><span class="p">();</span>

    <span class="n">capacity</span><span class="p">.</span><span class="n">GetComponent</span><span class="p">&lt;</span><span class="n">RaceCapacity</span><span class="p">&gt;().</span><span class="nf">expand</span><span class="p">();</span>
		<span class="n">building</span><span class="p">.</span><span class="n">GetComponent</span><span class="p">&lt;</span><span class="n">UnitBuilding</span><span class="p">&gt;().</span><span class="nf">produce</span><span class="p">();</span>
  <span class="p">}</span>
<span class="p">}</span>
</code></pre></div></div>

