<span class="p">{</span>
	<span class="k">public</span> <span class="k">abstract</span> <span class="k">void</span> <span class="nf">expand</span> <span class="p">();</span>
<span class="p">}</span>

<span class="k">public</span> <span class="k">class</span> <span class="nc">SupplyDepot</span> <span class="p">:</span> <span class="n">RaceCapacity</span>
<span class="p">{</span>
	<span class="k">public</span> <span class="k">override</span> <span class="k">void</span> <span class="nf">expand</span><span class="p">()</span>
	<span class="p">{</span>
		<span class="n">Debug</span><span class="p">.</span><span class="nf">Log</span> <span class="p">(</span><span class="s">"Terran Capacity +8 !!!"</span><span class="p">);</span>
	<span class="p">}</span>
<span class="p">}</span>

