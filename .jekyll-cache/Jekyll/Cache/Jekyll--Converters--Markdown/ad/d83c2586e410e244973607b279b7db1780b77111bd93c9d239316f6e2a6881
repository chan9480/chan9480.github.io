            <span class="n">sumTo</span><span class="p">(</span><span class="mi">2</span><span class="p">)</span> <span class="c1">// sumTo(1)í˜¸ì¶œ</span>
                <span class="n">sumTo</span><span class="p">(</span><span class="mi">1</span><span class="p">)</span> <span class="c1">// (sumnum &lt;= 1 ì— í•´ë‹¹ë˜ì–´ ë”ì´ìƒ ì¬ê·€ í˜¸ì¶œ X)</span>
                <span class="k">return</span> <span class="mi">1</span>
            <span class="k">return</span> <span class="mi">1</span> <span class="o">+</span> <span class="mi">2</span>
        <span class="k">return</span> <span class="mi">1</span> <span class="o">+</span> <span class="mi">2</span> <span class="o">+</span> <span class="mi">3</span>
    <span class="k">return</span> <span class="mi">1</span> <span class="o">+</span> <span class="mi">2</span> <span class="o">+</span> <span class="mi">3</span> <span class="o">+</span> <span class="mi">4</span>
<span class="k">return</span> <span class="mi">1</span> <span class="o">+</span> <span class="mi">2</span> <span class="o">+</span> <span class="mi">3</span> <span class="o">+</span> <span class="mi">4</span> <span class="o">+</span> <span class="mi">5</span>     
