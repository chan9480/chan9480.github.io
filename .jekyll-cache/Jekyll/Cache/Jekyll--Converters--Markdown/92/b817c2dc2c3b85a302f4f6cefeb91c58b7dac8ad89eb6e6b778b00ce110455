			<span class="n">y_pos</span> <span class="o">=</span> <span class="n">y_pos</span> <span class="o">*</span> <span class="mf">2.0</span><span class="p">;</span>		  <span class="c1">//  0.0 &lt;= y &lt;= 2.0</span>
