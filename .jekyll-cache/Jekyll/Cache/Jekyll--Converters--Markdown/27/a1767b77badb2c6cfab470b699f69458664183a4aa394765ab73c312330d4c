<span class="p">{</span>
	<span class="k">protected</span> <span class="n">UnitType</span> <span class="n">type</span><span class="p">;</span>
	<span class="k">protected</span> <span class="kt">string</span> <span class="n">name</span><span class="p">;</span>
	<span class="k">protected</span> <span class="kt">int</span> <span class="n">hp</span><span class="p">;</span>
