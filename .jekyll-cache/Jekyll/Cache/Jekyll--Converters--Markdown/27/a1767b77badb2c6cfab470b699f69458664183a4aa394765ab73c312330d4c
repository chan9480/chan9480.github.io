    <span class="p">{</span>
        <span class="k">return</span> <span class="n">units</span><span class="p">;</span>
    <span class="p">}</span>

    <span class="c1">// Factory Method</span>
    <span class="k">public</span> <span class="k">abstract</span> <span class="k">void</span> <span class="nf">CreateUnits</span><span class="p">();</span> 
<span class="p">}</span>
