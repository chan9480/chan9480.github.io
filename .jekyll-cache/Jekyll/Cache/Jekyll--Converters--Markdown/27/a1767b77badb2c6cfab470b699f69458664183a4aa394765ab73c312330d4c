<h4 id="bossgeneratorcs">ğŸ“œBossGenerator.cs</h4>

<div class="language-c# highlighter-rouge"><div class="highlight"><pre class="highlight"><code><span class="k">using</span> <span class="nn">System.Collections</span><span class="p">;</span>
<span class="k">using</span> <span class="nn">System.Collections.Generic</span><span class="p">;</span>
<span class="k">using</span> <span class="nn">UnityEngine</span><span class="p">;</span>


<span class="k">class</span> <span class="nc">BossGenerator</span> <span class="p">:</span> <span class="n">BossFactory</span>
<span class="p">{</span>
    <span class="c1">// ì„¤ë‚  ì½”ìŠ¤íŠ¬ ë³´ìŠ¤ëª¹ ì§€ì •</span>
    <span class="k">public</span> <span class="n">BossType</span> <span class="n">type</span> <span class="p">=</span> <span class="n">BossType</span><span class="p">.</span><span class="n">EventBoss</span><span class="p">;</span>
    <span class="k">public</span> <span class="n">GameObject</span> <span class="n">_normalBoss</span><span class="p">;</span>
    <span class="k">public</span> <span class="n">GameObject</span> <span class="n">_eventBoss</span><span class="p">;</span>

    <span class="k">public</span> <span class="k">override</span> <span class="k">void</span> <span class="nf">CreateBoss</span><span class="p">(</span><span class="n">Transform</span> <span class="n">tran</span><span class="p">)</span>
	<span class="p">{</span>
        <span class="k">if</span> <span class="p">(</span><span class="n">type</span> <span class="p">==</span> <span class="n">BossType</span><span class="p">.</span><span class="n">NormalBoss</span><span class="p">)</span>
        <span class="p">{</span>
            <span class="n">GameObject</span> <span class="n">boss</span> <span class="p">=</span> <span class="nf">Instantiate</span><span class="p">(</span><span class="n">_normalBoss</span><span class="p">)</span> <span class="k">as</span> <span class="n">GameObject</span><span class="p">;</span>
            <span class="n">boss</span><span class="p">.</span><span class="n">transform</span><span class="p">.</span><span class="n">position</span> <span class="p">=</span> <span class="n">tran</span><span class="p">.</span><span class="n">position</span><span class="p">;</span>
            <span class="n">boss</span><span class="p">.</span><span class="n">transform</span><span class="p">.</span><span class="n">localRotation</span> <span class="p">=</span> <span class="n">tran</span><span class="p">.</span><span class="n">localRotation</span><span class="p">;</span>
        <span class="p">}</span>
        <span class="k">else</span> <span class="k">if</span> <span class="p">(</span><span class="n">type</span> <span class="p">==</span> <span class="n">BossType</span><span class="p">.</span><span class="n">EventBoss</span><span class="p">)</span>
        <span class="p">{</span>
            <span class="n">GameObject</span> <span class="n">boss</span> <span class="p">=</span> <span class="nf">Instantiate</span><span class="p">(</span><span class="n">_eventBoss</span><span class="p">)</span> <span class="k">as</span> <span class="n">GameObject</span><span class="p">;</span>
            <span class="n">boss</span><span class="p">.</span><span class="n">transform</span><span class="p">.</span><span class="n">position</span> <span class="p">=</span> <span class="n">tran</span><span class="p">.</span><span class="n">position</span><span class="p">;</span>
            <span class="n">boss</span><span class="p">.</span><span class="n">transform</span><span class="p">.</span><span class="n">localRotation</span> <span class="p">=</span> <span class="n">tran</span><span class="p">.</span><span class="n">localRotation</span><span class="p">;</span>
        <span class="p">}</span>
    <span class="p">}</span>
<span class="p">}</span>

