        <span class="p">}</span>
        <span class="k">else</span> <span class="k">if</span> <span class="p">(</span><span class="n">factory</span><span class="p">.</span><span class="n">type</span> <span class="p">==</span> <span class="n">BossType</span><span class="p">.</span><span class="n">EventBoss</span><span class="p">)</span>
