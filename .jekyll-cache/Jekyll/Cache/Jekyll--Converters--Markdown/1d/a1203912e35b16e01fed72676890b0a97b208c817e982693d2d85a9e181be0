		<span class="kt">void</span> <span class="n">setWallColor</span><span class="p">(</span><span class="k">const</span> <span class="n">RGB</span><span class="o">&amp;</span> <span class="n">_wall_color</span><span class="p">)</span>
		<span class="p">{</span>
			<span class="n">wall_color</span> <span class="o">=</span> <span class="n">_wall_color</span><span class="p">;</span>
		<span class="p">}</span>

		<span class="kt">void</span> <span class="n">setWindowColor</span><span class="p">(</span><span class="k">const</span> <span class="n">RGB</span><span class="o">&amp;</span> <span class="n">_window_color</span><span class="p">)</span> <span class="c1">// ì¶”ê°€. ì°½ë¬¸ ìƒ‰ì„ ì§€ì •í•¨</span>
		<span class="p">{</span>
