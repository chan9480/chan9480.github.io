<span class="k">namespace</span> <span class="n">jm</span>
<span class="p">{</span>
	<span class="k">class</span> <span class="nc">Window</span>
	<span class="p">{</span>
	<span class="nl">private:</span>
		<span class="n">RGB</span> <span class="n">window_color</span><span class="p">;</span>
		<span class="kt">float</span> <span class="n">window_angle</span> <span class="o">=</span> <span class="mf">0.0</span><span class="n">f</span><span class="p">;</span>

	<span class="nl">public:</span>
		<span class="n">Window</span><span class="p">()</span>
			<span class="o">:</span> <span class="n">window_color</span><span class="p">(</span><span class="n">Colors</span><span class="o">::</span><span class="n">skyblue</span><span class="p">),</span> <span class="n">window_angle</span><span class="p">(</span><span class="mf">0.0</span><span class="n">f</span><span class="p">)</span>
