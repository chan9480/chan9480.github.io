			<span class="p">{</span>
				<span class="k">for</span> <span class="p">(</span><span class="k">const</span> <span class="k">auto</span> <span class="o">&amp;</span> <span class="n">obj</span> <span class="o">:</span> <span class="n">objs</span><span class="p">)</span>
				<span class="p">{</span>
					<span class="n">obj</span><span class="o">-&gt;</span><span class="n">draw</span><span class="p">();</span>
