        <span class="kt">string</span> <span class="n">partsList</span> <span class="p">=</span> <span class="n">vehicleType</span><span class="p">.</span><span class="nf">ToString</span><span class="p">()</span> <span class="p">+</span> <span class="s">" parts:\n\t"</span><span class="p">;</span>

        <span class="n">Transform</span><span class="p">[]</span> <span class="n">trs</span> <span class="p">=</span> <span class="n">GetComponentsInChildren</span><span class="p">&lt;</span><span class="n">Transform</span><span class="p">&gt;();</span>
        <span class="k">for</span> <span class="p">(</span><span class="kt">int</span> <span class="n">i</span> <span class="p">=</span> <span class="m">1</span><span class="p">;</span> <span class="n">i</span> <span class="p">&lt;</span> <span class="n">trs</span><span class="p">.</span><span class="n">Length</span><span class="p">;</span> <span class="n">i</span><span class="p">++)</span>
        <span class="p">{</span>
            <span class="n">partsList</span> <span class="p">+=</span> <span class="n">trs</span><span class="p">[</span><span class="n">i</span><span class="p">].</span><span class="n">gameObject</span><span class="p">.</span><span class="n">name</span> <span class="p">+</span> <span class="s">" "</span><span class="p">;</span>
        <span class="p">}</span>

