    <span class="p">{</span>
        <span class="n">GameObject</span> <span class="n">obj</span> <span class="p">=</span> <span class="nf">Instantiate</span><span class="p">(</span><span class="n">part</span><span class="p">)</span> <span class="k">as</span> <span class="n">GameObject</span><span class="p">;</span>  
        <span class="n">obj</span><span class="p">.</span><span class="n">transform</span><span class="p">.</span><span class="n">localPosition</span> <span class="p">=</span> <span class="n">localPosition</span><span class="p">;</span>
        <span class="n">obj</span><span class="p">.</span><span class="n">transform</span><span class="p">.</span><span class="nf">SetParent</span><span class="p">(</span><span class="k">this</span><span class="p">.</span><span class="n">transform</span><span class="p">);</span>
    <span class="p">}</span>

