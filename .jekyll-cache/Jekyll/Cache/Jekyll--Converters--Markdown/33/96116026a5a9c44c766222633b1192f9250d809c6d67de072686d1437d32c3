        <span class="n">Vehicle</span> <span class="n">car</span> <span class="p">=</span> <span class="n">carBuilder</span><span class="p">.</span><span class="nf">getVehicle</span><span class="p">();</span>
        <span class="n">Debug</span><span class="p">.</span><span class="nf">Log</span><span class="p">(</span><span class="n">car</span><span class="p">.</span><span class="nf">GetPartsList</span><span class="p">());</span>
        
        <span class="n">Vehicle</span> <span class="n">motorCycle</span> <span class="p">=</span> <span class="n">motorCycleBuilder</span><span class="p">.</span><span class="nf">getVehicle</span><span class="p">();</span>
        <span class="n">Debug</span><span class="p">.</span><span class="nf">Log</span><span class="p">(</span><span class="n">motorCycle</span><span class="p">.</span><span class="nf">GetPartsList</span><span class="p">());</span>

        <span class="c1">// ìµœì¢… ìƒì‚°ëœ ì œí’ˆì˜ ìœ„ì¹˜ë¥¼ ì§€ì •í•œë‹¤.</span>
        <span class="n">car</span><span class="p">.</span><span class="n">transform</span><span class="p">.</span><span class="n">position</span> <span class="p">=</span> <span class="k">new</span> <span class="nf">Vector3</span><span class="p">(-</span><span class="m">3f</span><span class="p">,</span> <span class="m">0</span><span class="p">,</span> <span class="m">0</span><span class="p">);</span>
        <span class="n">motorCycle</span><span class="p">.</span><span class="n">transform</span><span class="p">.</span><span class="n">position</span> <span class="p">=</span> <span class="k">new</span> <span class="nf">Vector3</span><span class="p">(</span><span class="m">3f</span><span class="p">,</span> <span class="m">0</span><span class="p">,</span> <span class="m">0</span><span class="p">);</span>
    <span class="p">}</span>

<span class="p">}</span>

</code></pre></div></div>

