	<span class="n">jm</span><span class="o">::</span><span class="n">RotatingStarExample</span><span class="p">().</span><span class="n">init</span><span class="p">(</span><span class="s">"This is my digital canvas!"</span><span class="p">,</span> <span class="mi">1280</span><span class="p">,</span> <span class="mi">960</span><span class="p">,</span> <span class="nb">true</span><span class="p">).</span><span class="n">run</span><span class="p">();</span>
	
